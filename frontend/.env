const API_BASE_URL = import.meta.env.VITE_API_URL || 'http://localhost:8000/api';

class ApiError extends Error {
  constructor(public status: number, message: string) {
    super(message);
    this.name = 'ApiError';
  }
}

async function handleResponse<T>(response: Response): Promise<T> {
  if (!response.ok) {
    const error = await response.json().catch(() => ({ message: 'Network error' }));
    throw new ApiError(response.status, error.message || 'Request failed');
  }
  return response.json();
}

function getHeaders(): HeadersInit {
  return {
    'Content-Type': 'application/json',
  };
}

export const api = {
  // Predictions
  async getPredictions() {
    const response = await fetch(`${API_BASE_URL}/predictions`, {
      headers: getHeaders(),
    });
    return handleResponse(response);
  },

  async getPredictionByTicker(ticker: string) {
    const response = await fetch(`${API_BASE_URL}/predictions/${ticker}`, {
      headers: getHeaders(),
    });
    return handleResponse(response);
  },

  // Trades
  async getTrades() {
    const response = await fetch(`${API_BASE_URL}/trades`, {
      headers: getHeaders(),
    });
    return handleResponse(response);
  },

  async createTrade(trade: unknown) {
    const response = await fetch(`${API_BASE_URL}/trades`, {
      method: 'POST',
      headers: getHeaders(),
      body: JSON.stringify(trade),
    });
    return handleResponse(response);
  },

  async updateTrade(id: number, trade: unknown) {
    const response = await fetch(`${API_BASE_URL}/trades/${id}`, {
      method: 'PUT',
      headers: getHeaders(),
      body: JSON.stringify(trade),
    });
    return handleResponse(response);
  },

  async deleteTrade(id: number) {
    const response = await fetch(`${API_BASE_URL}/trades/${id}`, {
      method: 'DELETE',
      headers: getHeaders(),
    });
    return handleResponse(response);
  },

  // Training
  async startTraining(config: unknown) {
    const response = await fetch(`${API_BASE_URL}/training/start`, {
      method: 'POST',
      headers: getHeaders(),
      body: JSON.stringify(config),
    });
    return handleResponse(response);
  },

  async getTrainingStatus() {
    const response = await fetch(`${API_BASE_URL}/training/status`, {
      headers: getHeaders(),
    });
    return handleResponse(response);
  },

  // Data sync
  async syncData() {
    const response = await fetch(`${API_BASE_URL}/data/sync`, {
      method: 'POST',
      headers: getHeaders(),
    });
    return handleResponse(response);
  },

  async getDataStats() {
    const response = await fetch(`${API_BASE_URL}/data/stats`, {
      headers: getHeaders(),
    });
    return handleResponse(response);
  },
};